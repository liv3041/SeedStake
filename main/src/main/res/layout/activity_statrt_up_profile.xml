<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".view.StartUpProfileActivity">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/item_startUp_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:src="@drawable/busines"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_startUP_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/item_tagline"
        app:layout_constraintLeft_toRightOf="@id/item_startUp_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="StartUp Name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/item_tagline"
        app:layout_constraintLeft_toRightOf="@id/item_startUp_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="Description"
        android:textStyle="bold"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bookmark"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/lime_green"
        android:background="@drawable/custom_button"
        android:textSize="18sp"
        android:text="Bookmark"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:textStyle="bold|normal"
        app:backgroundTint="@color/lime_green"
        app:cornerRadius="30dp"
        android:gravity="center"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_invest"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/lime_green"
        android:background="@drawable/custom_button"
        android:textSize="18sp"
        android:text="Invest"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:textStyle="bold|normal"
        app:backgroundTint="@color/lime_green"
        app:cornerRadius="30dp"
        android:gravity="center"/>

</LinearLayout>

</LinearLayout>