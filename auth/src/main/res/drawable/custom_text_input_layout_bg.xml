<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the TextInputLayout is focused -->
    <item android:state_focused="true">
        <layer-list>
            <!-- This transparent shape will remove the line above the placeholder -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- The rest of the background when focused, you can customize this as needed -->
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <!-- Set your desired background color here -->
                    <solid android:color="@color/white" />
                    <!-- Optionally, you can set a stroke if needed -->
                    <!-- <stroke android:width="1dp" android:color="@color/your_desired_stroke_color" /> -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default background when not focused -->
    <item>
        <layer-list>
            <!-- This transparent shape will remove the line above the placeholder -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- The rest of the default background, you can customize this as needed -->
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <!-- Set your desired background color here -->
                    <solid android:color="@color/white" />
                    <!-- Optionally, you can set a stroke if needed -->
                    <!-- <stroke android:width="1dp" android:color="@color/your_desired_stroke_color" /> -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
